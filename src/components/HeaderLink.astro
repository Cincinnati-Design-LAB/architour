---
import { Link } from '@components'

export interface Props {
  href: string
}

const { href } = Astro.props

const dynamicClasses = Astro.url.pathname === href ? 'font-bold' : ''
---

<Link href={href} className={`hover:opacity-70 duration-300 transition-all ${dynamicClasses}`}>
  <slot />
</Link>
