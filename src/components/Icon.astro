---
import ArrowLeft from './Icon/ArrowLeft.astro'
import ArrowRight from './Icon/ArrowRight.astro'
import Building from './Icon/Building.astro'
import Calendar from './Icon/Calendar.astro'
import Cancel from './Icon/Cancel.astro'
import Clock from './Icon/Clock.astro'
import Donate from './Icon/Donate.astro'
import Eye from './Icon/Eye.astro'
import Kentucky from './Icon/Kentucky.astro'
import Star from './Icon/Star.astro'
import Waves from './Icon/Waves.astro'

export interface Props {
  name:
    | 'arrow-left'
    | 'arrow-right'
    | 'calendar'
    | 'cancel'
    | 'eye'
    | 'building'
    | 'clock'
    | 'donate'
    | 'kentucky'
    | 'star'
    | 'waves'
}

const { name } = Astro.props

const iconMap: {
  [K in Exclude<Props['name'], undefined | null>]: (_props: Record<string, any>) => any
} = {
  'arrow-left': ArrowLeft,
  'arrow-right': ArrowRight,
  building: Building,
  calendar: Calendar,
  cancel: Cancel,
  clock: Clock,
  donate: Donate,
  eye: Eye,
  kentucky: Kentucky,
  star: Star,
  waves: Waves,
}

const IconComponent = iconMap[name]
---

<svg viewBox="0 0 100 100" fill="none" xmlns="http://www.w3.org/2000/svg">
  <IconComponent />
</svg>
