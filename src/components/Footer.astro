---
import { Link, Logo } from '@components'

const content = {
  address: ['659 Van Meter Street, Suite 540', 'Cincinnati, Ohio 45202', '(513) 421-4469'],
  people: [
    {
      label: 'Executive Director',
      name: 'Christen M. Lubbers',
      email: 'clubbers@architecturecincy.org',
    },
    {
      label: 'Administrative Assistant',
      email: 'Admin@architecturecincy.org',
    },
  ],
  links: [
    { label: 'About', href: 'https://www.designlearnandbuild.org/about-us-1' },
    { label: 'Student Education', href: 'https://www.designlearnandbuild.org/design-lab' },
    { label: 'Programs', href: 'https://www.designlearnandbuild.org/programs-1' },
    { label: 'How To Get Involved', href: 'https://www.designlearnandbuild.org/volunteer' },
    { label: 'Insights', href: 'https://www.designlearnandbuild.org/blog-4-1' },
  ],
}
---

<footer class="border-t border-gray-200">
  <div class="max-w-7xl mx-auto py-16 px-8 md:px-4">
    <div class="grid grid-cols-12 gap-4 gap-y-12 md:gap-y-0">
      <div class="col-span-12 md:col-span-4">
        <Link
          href="https://www.designlearnandbuild.org/"
          className="inline-block w-40 mb-4 max-w-full"
          hideIcon={true}
        >
          <Logo />
        </Link>
        {content.address.map((line) => <span class="block mb-1 last:mb-0">{line}</span>)}
      </div>

      <div class="col-span-12 md:col-span-5">
        {
          content.people.map((person) => (
            <div class="mb-6 last:mb-0">
              <span class="block font-bold italic mb-1">{person.label}</span>
              {person.name && <span class="block mb-1">{person.name}</span>}
              {person.email && (
                <Link
                  href={`mailto:${person.email}`}
                  className="text-primary-500 border-b border-b-primary-500 inline-block leading-4"
                >
                  {person.email}
                </Link>
              )}
            </div>
          ))
        }
      </div>

      <div class="col-span-12 md:col-span-3">
        {
          content.links.map((link) => (
            <span class="block mb-1">
              <Link
                href={link.href}
                className="text-primary-500 border-b border-b-primary-500 inline-block leading-4"
              >
                {link.label}
              </Link>
            </span>
          ))
        }
      </div>
    </div>
  </div>
</footer>
