---
import { Icon, IconProps, Link, ResponsiveImage } from '@components'
import { CloudinaryImage } from '@content'

export interface Props {
  title: string
  excerpt: string
  image?: CloudinaryImage<'square'>
  href: string
  meta?: Array<{ icon: IconProps['name']; label: string }>
}

const { excerpt, href, title, image, meta } = Astro.props
---

<Link href={href} className="block bg-white shadow-md relative">
  {
    image && (
      <div class="rounded-full absolute top-[-2rem] left-[1rem] w-16 h-16 overflow-hidden border-2 border-black">
        <ResponsiveImage src={image.square} className="object-cover h-full w-full object-center" />
      </div>
    )
  }
  <div class="pt-12 pb-4 px-4">
    <h3 class="text-lg font-semibold mb-2">{title}</h3>
    {excerpt && <div class="mb-4" set:html={excerpt} />}
    {
      meta && (
        <div class="flex space-x-6 items-center">
          {(meta || []).map(({ icon, label }) => {
            if (!icon || !label) return
            return (
              <div class="flex space-x-2 items-center text-secondary-500">
                <span class="w-4">
                  <Icon name={icon} />
                </span>
                <span class="text-sm font-semibold">{label}</span>
              </div>
            )
          })}
        </div>
      )
    }
  </div>
</Link>
