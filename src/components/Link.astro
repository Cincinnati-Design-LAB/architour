---
export interface Props {
  href: string
  className?: string
  id?: string
}

const { href, className = '', id = '' } = Astro.props

const isInternal = href.startsWith('/')
---

{
  isInternal ? (
    <a href={href} class={className} id={id}>
      <slot />
    </a>
  ) : (
    <a href={href} class={className} id={id} target="_blank" rel="noopener noreferrer">
      <slot />
    </a>
  )
}
